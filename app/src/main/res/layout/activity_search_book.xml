<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhenquan.doubanread.ui.activity.SearchBookActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/iv_search_back"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/edit_search"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="搜索"
            android:id="@+id/tv_search"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:text="搜索历史"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_margin="15dp"
        android:layout_height="wrap_content" />
   <com.zhenquan.doubanread.wight.FlowLayout
       android:layout_width="match_parent"
       android:id="@+id/flow_history"
       android:layout_height="wrap_content"></com.zhenquan.doubanread.wight.FlowLayout>
</LinearLayout>
