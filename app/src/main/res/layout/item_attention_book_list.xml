<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_attention_book_list"
        android:layout_width="80dp"
        android:layout_alignParentLeft="true"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:scaleType="fitXY"
        android:src="@mipmap/book_sample" />

    <TextView
        android:id="@+id/tv_attention_book_name"
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/iv_attention_book_list"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="書籍名"
        android:textColor="@color/black" />
    <TextView
        android:layout_width="match_parent"
        android:text="9.0"
        android:textSize="10sp"
        android:id="@+id/tv_attention_book_star"
        android:layout_below="@+id/tv_attention_book_name"
        android:layout_toRightOf="@+id/iv_attention_book_list"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_attention_book_author"
        android:layout_below="@+id/tv_attention_book_star"
        android:layout_toRightOf="@+id/iv_attention_book_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:maxLines="3"
        android:text="author" />
    <TextView
        android:id="@+id/tv_attention_book_tags"
        android:layout_below="@+id/tv_attention_book_author"
        android:layout_toRightOf="@+id/iv_attention_book_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:maxLines="2"
        android:text="tag" />
    <TextView
        android:layout_width="match_parent"
        android:textSize="10sp"
        android:id="@+id/tv_attention_book_jianjie"
        tools:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_below="@+id/iv_attention_book_list"
        android:layout_height="wrap_content" />
</RelativeLayout>
