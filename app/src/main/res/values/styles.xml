<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        //全局字体
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
    </style>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Droid Sans Fallback.ttf</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="CustomToolBar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

    <style name="drawer_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="state_drawable_height">30dp</item>
        <item name="state_drawable_width">30dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="isShowState">true</item>
        <item name="state_drawable_padding_left">15dp</item>
        <item name="state_drawable_mode">left</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="pressBgColor">@color/half_white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="entrance_button">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:gravity">center</item>
        <item name="corner">4dp</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="android:textColor">@color/global_white_bg</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
